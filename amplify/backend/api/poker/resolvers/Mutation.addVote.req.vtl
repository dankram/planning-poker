{
    "version" : "2017-02-28",
    "operation" : "UpdateItem",
    "key" : {
        "id": $util.dynamodb.toDynamoDBJson($ctx.args.id)
    },
    "update" : {
        "expression" : "SET #votes = list_append(#votes, :votes)",
        "expressionNames" : {
           "#votes" : "votes"
       },
       "expressionValues" : {
           ":votes": $util.dynamodb.toDynamoDBJson([{"name": $ctx.args.name, "vote": $ctx.args.vote}])
       }
    }
}